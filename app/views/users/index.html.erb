<div class="container">
  <div class="page-header"><h1>All Users</h1></div>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Hometown</th>
        <th>Birthday</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.hometown %></td>
        <td><%= user.birthday %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
