<div class="container">

  <%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>

  <div class="form-group">
    <label class="control-label col-md-2"><%= f.label :name %></label>
    <div class="form-controls col-md-4">
      <input class="form-control"<%= f.text_field :name %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-2"><%= f.label :hometown %></label>
    <div class="form-controls col-md-4">
      <input class="form-control"<%= f.text_field :hometown %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-2"><%= f.label :birthday %></label>
    <div class="form-controls col-md-4">
      <input class="form-control"<%= f.date_field :birthday %>
    </div>
  </div>

  <div class="form-group">
    <div class="actions col-md-offset-2 col-md-4">
      <%= f.submit class: "btn btn-primary" %>
      <a class="btn btn-default" href='/users'>Cancel</a>
    </div>
  </div>
  <% end %>


</div>
